<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="/Images/brands_04.png"></a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @if (Request.IsAuthenticated && @Web.Helper.WebUtility.CurrentUser != null)
                {
                    <div class="navbar-form navbar-right ">
                        <a id="user" class="user" href="#">
                            <div class="form-group">
                                <p>Welocme,@Web.Helper.WebUtility.CurrentUser.FirstName</p>
                            </div>
                            <div class="form-group">
                                <img src="/Images/naryana.jpg">
                            </div>
                        </a>
                          @Html.ActionLink("SignOut", "LogOff", "Account")
                       @* @Html.ActionLink("SignOut", "LogOff", "Account", new { @style = "background-image:url('~/Images/logout.png')" ,@class="logout"})*@
                       @* <a class="logout" href="Account/LogOff">
                            <img src="/Images/logout.png">
                        </a>*@
                        <div class="user-details">
                            <ul>
                                <li><a href="#">Settings</a></li>
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Configure</a></li>
                            </ul>

                        </div>
                    </div>
                }
                else
                    {
                        @Html.ActionLink("SignIn", "Login", "Account");
                    }
            </div>
            <!--/.navbar-collapse -->
        </div>
    </nav>
    <!-- header end -->
    <!-- Main jumbotron for a primary marketing message or call to action -->
   
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                     @if (@Web.Helper.WebUtility.CurrentUser != null)
                     {
                    <div class="col-md-2 menu-area">
                        <h4>Navigation</h4>
                        <ul class="menu-links">
                            <li>@Html.ActionLink("Test", "Create", "Test")</li>
                            <li>@Html.ActionLink("Product", "Create", "Product")</li>
                            <li>@Html.ActionLink("SOP", "Create", "SOP")</li>
                            <li>@Html.ActionLink("UOM", "Create", "UOM")</li>
                            <li>@Html.ActionLink("SampleReceiving", "Create", "SampleReceiving")</li>
                            <li>@Html.ActionLink("TestAllocation", "Index", "TestAllocation")</li>
                        </ul>
                    </div>
                     }
                    <div class="col-md-10 content-area">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div> <!-- /container -->
    
    <footer>
        <p>&copy; Company 2015</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/Comman.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
